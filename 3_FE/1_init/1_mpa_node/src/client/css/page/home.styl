@import "../module/theme.styl";

.home-wrap
	.daily-tags
		position: relative
		background-color: #fafafa
		margin:-20px 0 20px
		z-index: 9
		a.tags-tip
			position: absolute
			left: -9999px
			top: 0px
			color: #696975
			font-size: 14px
			line-height: 18px
			background-color: #fff
			box-shadow: 0px 3px 6px #dbe1fd
			padding: 5px 15px
			margin: -25px 0 0 -15px
			z-index: 99
			.fa-caret-down
			.tags-tip-circle
				position: absolute
				left: 50%
				z-index: 99
			.fa-caret-down
				bottom: -9px
				color: #fff
				margin-left: -4px
			.tags-tip-circle
				bottom: -25px
				display: inline-block
				width: 1px
				height: 1px
				line-height: 1
				padding: 4px
				background-color: #e613ed
				border: 4px solid #fdc2f6
				border-radius: 50%
				margin-left: -8px
				opacity: 1
			.tags-tip-circle-blue
				background-color: #2dcffd
				border: 4px solid #c9f2fb
		a.tags-tip:hover
			text-decoration: none
			.tags-tip-circle
				-webkit-animation: breath 2s ease infinite alternate;
				-o-animation: breath 2s ease infinite alternate;
				animation: breath 2s ease infinite alternate;
		@keyframes breath {
			0% {
				transform: scale(1)
				opacity: 1
			}
			50% {
				transform: scale(1.4)
				opacity: 0.7
			}
			100% {
				transform: scale(1)
				opacity: 1
			}
		}
	.analysis
		background-color: #f5f5f5
		margin: 20px 0
		padding-top: 20px
		.ul-wrap
			overflow: hidden
			ul
				display: block
				margin: 0
				padding: 0
				li
					float: left
					margin: 0 1.25% 20px 0
					position: relative
					width: 19%
					z-index: 9
					a.pic
						display: block
						height: auto
						overflow: hidden
						position: relative
						z-index: 99
						.img-responsive
							height: 100%
						.bg-mask
							background: transparent url('/images/bg_black_repeatx.png') repeat-x 0 0
							height: 100%
							left: 0
							top: 0
							opacity: 0.7
							position: absolute
							width: 100%
							z-index: 99
					.title
						bottom: 0px
						color: #fff
						font-size: 16px
						left: 0
						position: absolute
						padding: 0% 20px
						width: 100%
						z-index: 100

				li.li-last
					margin-right: 0

	.carousel
		position: relative
		.carousel-jzrb-control-btn
			position: absolute
			right: 20px
			top: -50px
			a
			a:hover
				color: $c-text2
				text-decoration: none
				margin: 0 10px
