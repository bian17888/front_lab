@import 'reset.styl'

/*
 * 浏览器升级样式
 */
.m-browsehappy-wrap
	position: fixed
	width: 100%
	height: 100%
	background-color: rgba(0, 0, 0, 0.8)
	z-index: 9999
	.browsehappy
		width: 500px
		color: #fff
		padding: 300px 20px
		margin: 0 auto
		.desc
			text-align: center
		table
			margin-top: 20px
			tr
				td
					vertical-align: middle
					text-align: center
					padding: 10px 20px
					p
						margin: 10px 0
		.mark-broswer
			display: inline-block
			width: 95px
			height: 93px
			background: url("http://img.alicdn.com/tps/TB1wRw_LXXXXXcrXpXXXXXXXXXX-300-93.png") no-repeat 0 0
		.mark-broswer-ff
			background-position: -100px 0
		.mark-broswer-cm
			background-position: -200px 0


/*
 * 初始化遮罩层
 */
.m-page-splash
	z-index: 99999
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-color: #333
	opacity: .9
	backface-visibility: hidden
	transition: opacity 0.3s linear
	.m-page-splash-message
		text-align: center
		margin: 20% auto 0
		font-family: "Segoe UI", Arial, Helvetica, sans-serif
		padding: 0 10%
		h5
			font-size: 400%
			font-weight: normal
			text-shadow: 2px 2px rgba(0, 0, 0, 0.15)
			text-transform: uppercase
			text-decoration: none
			color: #f58a00
			margin-bottom: 30px

/*
 * ngplus 插件样式
