@require '1_utils.styl'
global-reset()

/*
 * 基础样式
 */
body {
	font-family: 'Segoe UI', SegoeUI, 'Microsoft YaHei', 微软雅黑, "Helvetica Neue", Helvetica, Arial, sans-serif;
}
.clearfix:after {
	clear: both;
	content: " ";
	display: block;
	font-size: 0;
	height: 0;
	visibility: hidden;
}

.clearfix {
	zoom: 1;
}

.mr-10
	margin-right: 10px

/*
 * 第三方库
 * 包括 : ngplus 插件样式
 */
@css {
	.ngplus-overlay-background {
		top: 0px;
		left: 0px;
		padding-left: 100px;
		position: absolute;
		z-index: 10000;
		height: 100%;
		width: 100%;
		background-color: #808080;
		opacity: 0.2;
	}
	.ngplus-overlay-content {
		position: absolute;
		/*border: 1px solid #000;*/
		/*background-color: #fff;*/
		font-weight: bold;
		height: 100px;
		width: 300px;
		height: 15em;
		width: 20em;
		z-index: 10000;
		text-align: center;
	}
}

/*
 * 浏览器升级样式
 */
@css {
	.browsehappy-wrap {
		background-color: #000;
		height: 100%;
		position: fixed;
		left: 0;
		top: 0;
		width: 100%;
		z-index: 9999;
		filter: alpha(opacity = 85);
	}
	.browsehappy-wrap .browsehappy {
		color: #fff;
		margin: 0 auto;
		padding: 200px 20px;
		width: 500px;
	}
	.browsehappy-wrap .browsehappy .desc {
		text-align: center;
	}
	.browsehappy-wrap .browsehappy table {
		margin-top: 20px;
	}
	.browsehappy-wrap .browsehappy table tr td {
		padding: 10px 20px;
		text-align: center;
		vertical-align: middle;
	}
	.browsehappy-wrap .browsehappy table tr td p {
		margin: 10px 0;
	}
	.browsehappy-wrap .browsehappy .mark-broswer {
		background-color: transparent;
		background-image: url("http://img.alicdn.com/tps/TB1wRw_LXXXXXcrXpXXXXXXXXXX-300-93.png");
		display: inline-block;
		height: 93px;
		width: 95px;
	}
	.browsehappy-wrap .browsehappy .mark-broswer-ff {
		background-position: -100px 0;
	}
	.browsehappy-wrap .browsehappy .mark-broswer-cm {
		background-position: -200px 0;
	}
}